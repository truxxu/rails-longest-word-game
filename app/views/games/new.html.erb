<h1 class="text-center">New Game</h1>
<div class="container-fluid text-center">
  <ul class="list-inline">
    <% @grid.each do |letter|%>
    <li class="list-inline-item"><%= letter %></li>
    <% end %>
  </ul>
</div>

<div class="container text-center">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Introduce a word">
    <input id="tags_list" name="grid" value="<%= @grid.join(',') %>" type="hidden" />
    <input type="submit">
  </form>
</div>
